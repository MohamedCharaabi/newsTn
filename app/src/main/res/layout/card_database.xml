<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:background="#111"
    android:id="@+id/database_cardLayout">

    <LinearLayout
        android:id="@+id/database_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/database_cardImage"
            android:layout_width="77dp"
            android:layout_height="100dp"
            android:layout_gravity="fill_vertical"
            android:layout_margin="5dp"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/database_cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="11dp"
                android:maxLength="44"
                android:text="Living With Google: Google Maps"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/database_cardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="150"
                android:text="Application Android qui permet de lire tunisie
                 news (https://www.tunisienumerique.com/feed-actualites-tunisie
                 et de crÃ©er un RecyclerView qui permet "
                android:textColor="#000" />


        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>